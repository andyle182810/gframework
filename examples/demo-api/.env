# Application
LOG_LEVEL=debug

# HTTP Server
HTTP_SERVER_HOST=0.0.0.0
HTTP_SERVER_PORT=8080
HTTP_ENABLE_CORS=true
HTTP_BODY_LIMIT=10M
HTTP_SERVER_READ_TIMEOUT=30s
HTTP_SERVER_WRITE_TIMEOUT=30s
HTTP_SKIP_REQUEST_ID=false

# Metric Server
METRIC_SERVER_HOST=0.0.0.0
METRIC_SERVER_PORT=9090
METRIC_SERVER_READ_TIMEOUT=10s
METRIC_SERVER_WRITE_TIMEOUT=10s

# Graceful Shutdown
GRACEFUL_SHUTDOWN_PERIOD=10s

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5441
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=admindb
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_CONNECTION=25
POSTGRES_MIN_CONNECTION=5
POSTGRES_MAX_CONNECTION_IDLE_TIME=30m
POSTGRES_MAX_CONNECTION_LIFETIME=1h
POSTGRES_HEALTH_CHECK_PERIOD=1m
POSTGRES_CONNECT_TIMEOUT=10s
POSTGRES_STATEMENT_TIMEOUT=30s
POSTGRES_LOCK_TIMEOUT=10s
POSTGRES_IDLE_IN_TRANSACTION_TIMEOUT=30s
POSTGRES_LOG_LEVEL=info

# Valkey (Redis)
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=password
VALKEY_DB=0
VALKEY_DIAL_TIMEOUT=5s
VALKEY_READ_TIMEOUT=3s
VALKEY_WRITE_TIMEOUT=3s
VALKEY_POOL_SIZE=10
VALKEY_MIN_IDLE_CONNS=2
VALKEY_MAX_IDLE_CONNS=5
VALKEY_PING_TIMEOUT=3s

# Migration settings
MIGRATION_ENABLED=true
MIGRATION_SOURCE="file://db/migrations"
